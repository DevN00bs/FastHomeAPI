{
  "name": "fast-home-api",
  "version": "0.1.0",
  "description": "REST API to serve data to the different app versions. Uses Express and MariaDB as database.",
  "main": "dist/server.js",
  "scripts": {
    "dev": "npm run views && tsc-watch --onSuccess \"node -r dotenv/config ./dist/server.js\"",
    "build": "tsc && npm run views",
    "heroku-cleanup": "rm -rf ./src",
    "views": "cp -R ./src/views ./dist"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/DevN00bs/FastHomeAPI.git"
  },
  "author": "FastHome Backend team",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/DevN00bs/FastHomeAPI/issues"
  },
  "homepage": "https://github.com/DevN00bs/FastHomeAPI#readme",
  "dependencies": {
    "bcrypt": "^5.0.1",
    "class-transformer": "^0.4.0",
    "class-validator": "^0.13.1",
    "cors": "^2.8.5",
    "es6-shim": "^0.35.6",
    "express": "^4.17.1",
    "express-jsdoc-swagger": "^1.6.6",
    "jsonwebtoken": "^8.5.1",
    "mariadb": "^2.5.4",
    "nodemailer": "^6.7.0",
    "nodemailer-express-handlebars": "^4.0.0",
    "otplib": "^12.0.1",
    "reflect-metadata": "^0.1.13"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/jsonwebtoken": "^8.5.5",
    "@types/nodemailer": "^6.4.4",
    "@types/nodemailer-express-handlebars": "^4.0.1",
    "dotenv": "^10.0.0",
    "tsc-watch": "^4.5.0",
    "typescript": "^4.4.3"
  }
}
